@{
    Layout = null;
}
@model MobileBankApp.Models.Dtos.Login
<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileBankApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <link rel="stylesheet" href="~/myCss/indexcss.css" />
</head>
<body>
    <h3 style="text-align: center ;color :Red;"> @ViewBag.Error</h3>
 
<div class="container">
    <div class="row justify-content-center">
        <div class=" card col-md-6">
            <div class="card-body ">
                <div class="bg-light">
                    <h1 class="tagcolor" style="color:mediumblue">Login</h1>
                    <p class="tagcolor" style="color:mediumblue">Please fill in this form to Login.</p>
                    <hr class="tagcolor" style="color:mediumblue">

                </div>
                <form asp-action="Login" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-row">
                        <div class="form-group col-sm-6">
                            <label asp-for="Email" class="control-label"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group col-sm-6">
                            <label asp-for="Pin" class="control-label"></label>
                            <input asp-for="Pin" class="form-control" />
                            <span asp-validation-for="Pin" class="text-danger"></span>
                        </div>
                  
                    <div class="form-group ">
                        <input href="#myModal" type="submit" value="Submit" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                    </div>
                </form>
            </div>
        </div>

    </div>
</div>
<div class="loginpage" style="padding: 0px 50px">

</div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}