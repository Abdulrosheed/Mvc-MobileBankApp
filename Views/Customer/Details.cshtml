@model MobileBankApp.Models.Dtos.CustomerDto
@{
    Layout = null;
}
<head>
     <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MobileBankApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<dl class="row">
    <dt class="col-sm-2">
        FirstName:
    </dt>
    <dd class="col-sm-10">
        @Model.FirstName
    </dd>
    <dt class="col-sm-2">
        LastName:
    </dt>
    <dd class="col-sm-10">
        @Model.LastName
    </dd>
    <dt class="col-sm-2">
        Email:
    </dt>
    <dd class="col-sm-10">
        @Model.Email
    </dd>
    <dt class="col-sm-2">
        Phone:
    </dt>
    <dd class="col-sm-10">
        @Model.PhoneNumber
    </dd>
    <dt class="col-sm-2">
        Balance:
    </dt>
    <dd class="col-sm-10">
        @Model.Balance
    </dd>
     <dt class="col-sm-2">
        Account Number:
    </dt>
      <dd class="col-sm-10">
        @Model.AccountNumber
    </dd>
    <dt class="col-sm-2">Loans</dt>
    @if(Model.Loans.Count != 0)
    {
        
        <dd class="col-sm-10"> @Model.Loans[0].Amount  @Model.Loans[0].DateCreated</dd>
        @for (var i = 1; i < @Model.Loans.Count; i++)
        {
            <dt class="col-sm-2"> </dt>
            <dd class="col-sm-10">  @Model.Loans[i].Amount  @Model.Loans[i].DateCreated</dd>
        }
    } 
        
     <dt class="col-sm-2">Transactions</dt>
    @if(Model.Transactions.Count != 0)
    {
        
        <dd class="col-sm-10"> @Model.Transactions[0].Description @Model.Transactions[0].Amount  @Model.Transactions[0].DateCreated</dd>
        @for (var i = 1; i < @Model.Transactions.Count; i++)
        {
            <dt class="col-sm-2"> </dt>
            <dd class="col-sm-10"> @Model.Transactions[i].Description @Model.Transactions[i].Amount  @Model.Transactions[i].DateCreated</dd>
        }
    }  
</dl>

<button style="background-color:darkblue;"><a asp-action="Profile">Back to List</a></button>