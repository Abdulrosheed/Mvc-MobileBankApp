@model IEnumerable<MobileBankApp.Models.Dtos.LoanDto>

<div class="card-header" style="background-color:midnightblue;">
    <div class="card-title">
        <h1 class="text-center">Customer</h1>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AccountNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>

           
         



           
            <th>
                Details
            </th>
          
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => student.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.AccountNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => student.Amount)
            </td>
            
         
            
            <td>
                <a asp-action="Details" asp-route-id="@student.Id">Details</a>
            </td>
           
        </tr>
        }
    </tbody>
</table>
<button style="background-color:wheat;"><a asp-controller="Customer" asp-action="Create">Register Student</a> </button>